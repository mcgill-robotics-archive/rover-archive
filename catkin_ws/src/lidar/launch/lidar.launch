<launch>
	<!--
	  Publish the transform from the base_link to the point on the rover where
		the lidar mount is fixed. The lidar is mounted 40cm ahead of and 50cm above
		the center of rotation of the rover on the ground.
	-->
	<node pkg="tf2_ros" type="static_transform_publisher"
		name="mount_tf_broadcaster"
		args="0.04 0 0.05 0 0 0 base_link static_lidar_mount">
	</node>

	<!--
	  Publish the transformation between the base of the fixed mount to the
	  laser coordinate frame statically. The lidar is pitching down at approx.
		45 degrees -> pi/4 ~ 0.76
	-->
	<node pkg="tf2_ros" type="static_transform_publisher"
		name="laser_tf_broadcaster" args="0 0 0 0 0.76 0 static_lidar_mount laser">
	</node>

	<!-- Launch URG node which publishes laser scans in the laser frame. -->
	<group ns="lidar">
	    <node name="urg_node" pkg="urg_node" type="urg_node" >
	        <param name="port" type="string" value="/dev/lidar"/>
	        <param name="intensity" type="bool" value="true"/>
	    </node>
	</group>
</launch>
