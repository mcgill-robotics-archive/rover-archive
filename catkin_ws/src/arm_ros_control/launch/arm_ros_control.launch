<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find arm_ros_control)/config/arm_ros_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/arm" args="joint_state_controller base_yaw_effort_controller base_pitch_effort_controller 
    pitch2_effort_controller roll1_effort_controller pitch3_effort_controller roll2_effort_controller slide_finger1_effort_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/arm/joint_states" />
  </node>

</launch>
