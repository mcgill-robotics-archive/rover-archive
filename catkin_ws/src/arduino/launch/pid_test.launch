<launch>
    <node pkg="rosserial_python" type="serial_node.py" name="serial_pid_test" respawn="false" output="screen">
        <param name="port" value="/dev/mega_science" />
    </node>

    <node name="controller" pkg="pid" type="controller" output="screen" >
        <param name="node_name" value="pid_controller" />
        <param name="Kp" value="20.0" />
        <param name="Ki" value="0.0" />
        <param name="Kd" value="2.0" />
        <param name="upper_limit" value="1000000" />
        <param name="lower_limit" value="-1000000" />
        <param name="windup_limit" value="1000000" />
        <param name="max_loop_frequency" value="1000.0" />
        <param name="min_loop_frequency" value="1.0" />
        <remap from="setpoint" to="pid_command" />
        <remap from="control_effort" to="/command" />
    </node>

</launch>
